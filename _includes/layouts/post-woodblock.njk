---
layout: layouts/base.njk
---
<style>
  :root {
    --paper: #f6f0e8;
    --ink: #241425;
    --muted-ink: #3a223a;
    --rule: #241425;
    --marker-color: #8f1d14;

    --font-body: "Vollkorn", "Noto Serif TC", "Source Han Serif TC", "Source Han Serif", ui-serif, Georgia, serif;
    --font-display: "Noto Sans", "Noto Sans TC", "Source Han Sans TC", "Source Han Sans", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    --font-mn: "Gill Sans", "Gill Sans Nova", "GillSans", "Calibri", "Noto Sans TC", "Source Han Sans TC", "Source Han Sans", ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;

    --body-size: 1.2rem;
    --body-leading: 1.7;

    --main-measure: 70ch;
    --mn-width: 270px;
    --mn-gutter: 4rem;

    --frame-pad-x: 3rem;
    --shell-padding: 8rem;
    --border-weight: 12px;
  }

  /* Responsive shell padding - shrink margins first */
  @media (max-width: 1600px) {
    :root { --shell-padding: 4rem; }
  }
  @media (max-width: 1400px) {
    :root { --shell-padding: 2rem; }
  }
  @media (max-width: 1200px) {
    :root { --shell-padding: 1rem; }
  }

  /* Ensure media never causes horizontal scrolling */
  img, svg, video, iframe {
    max-width: 100%;
    height: auto;
  }

  html, body { max-width: none; }
  body {
    background: var(--paper);
    color: var(--ink);
    overflow-x: hidden;
  }

  .wb-shell {
    max-width: none;
    margin: 0;
    padding: 2.5rem var(--shell-padding) 4rem;
  }

  .wb-frame {
    border-left: var(--border-weight) solid var(--ink);
    border-right: var(--border-weight) solid var(--ink);
    padding: 2rem var(--frame-pad-x);
    background: rgba(255,255,255,0.35);
    position: relative;
    overflow-x: clip;
  }

  .wb-grid {
    display: grid;
    grid-template-columns: minmax(0, var(--main-measure)) var(--mn-width);
    gap: var(--mn-gutter);
    align-items: start;
  }

  /* Full width for posts without margin notes */
  .wb-grid:not(:has(.mn-note)) {
    grid-template-columns: minmax(0, var(--main-measure));
  }

  .wb-prose {
    font-family: var(--font-body);
    font-size: var(--body-size);
    line-height: var(--body-leading);

    /* Better line breaking in supporting browsers */
    text-wrap: pretty;
  }

  .wb-prose p { margin: 0 0 1.1em; }

  .wb-prose h1 {
    font-family: var(--font-display);
    font-size: 2.5em;
    line-height: 1.2;
    margin: 0 0 0.6em;
    letter-spacing: 0.01em;
    font-weight: 800;
  }

  .wb-prose h2 {
    font-family: var(--font-display);
    font-size: 1.75em;
    line-height: 1.3;
    margin: 1.2em 0 0.5em;
    font-weight: 700;
  }

  /* Blockquotes are for quotations: indentation only */
  .wb-prose blockquote {
    margin: 1.2em 0;
    padding-left: 1.1em;
  }

  /* Prevent Chinese characters from being italicized */
  .wb-prose em:lang(zh),
  .wb-prose em:lang(zh-Hans),
  .wb-prose em:lang(zh-Hant),
  .wb-prose i:lang(zh),
  .wb-prose i:lang(zh-Hans),
  .wb-prose i:lang(zh-Hant) {
    font-style: normal;
  }

  /* Poetry / preformatted: preserve line breaks */
  .wb-prose pre {
    font-family: var(--font-body);
    font-size: 0.92em;
    line-height: 1.35;
    background: transparent;
    padding: 0;
    margin: 1.1em 0;
    white-space: pre;
    overflow-x: auto;
  }

  /* Margin note marker: do not perturb line-height */
  .mn-marker {
    font-size: 0.78em;
    vertical-align: baseline;
    position: relative;
    cursor: pointer;
    user-select: none;
    color: var(--marker-color);
    text-decoration: none;
    border: none;
  }

  .mn-note {
    position: relative;
    width: var(--mn-width);
    font-family: var(--font-mn);
    font-size: 0.85rem;
    line-height: 1.4;
    color: var(--muted-ink);
    margin: 0;
    grid-column: 2;
    align-self: start;
  }

  .mn-note::before {
    content: "â€»";
    position: absolute;
    left: -1rem;
    top: 0;
    color: var(--marker-color);
    font-size: 0.7em;
  }

  .mn-note p { margin: 0 0 0.6em; }
  .mn-note p:last-child { margin-bottom: 0; }

  /* Allow italics in margin notes, but not for Chinese */
  .mn-note em:lang(zh),
  .mn-note em:lang(zh-Hans),
  .mn-note em:lang(zh-Hant),
  .mn-note i:lang(zh),
  .mn-note i:lang(zh-Hans),
  .mn-note i:lang(zh-Hant) {
    font-style: normal;
  }

  @media (max-width: 950px) {
    .wb-shell {
      padding: 1.5rem 1rem 2rem;
      max-width: 100%;
    }

    .wb-frame {
      border-left-width: 2px;
      border-right-width: 2px;
      padding: 1rem;
    }

    .wb-grid {
      display: block;
      position: static;
    }

    .wb-prose { width: 100%; }

    .mn-note {
      position: static !important;
      top: auto !important;
      width: 100% !important;
      margin: 0.8em 0 !important;
      padding: 0.6em !important;
      background: rgba(0,0,0,0.03);
      border-left: 3px solid var(--marker-color);
      grid-column: auto !important;
      display: none;
    }

    .mn-note::before {
      display: none;
    }

    .mn-note[hidden] {
      display: none !important;
    }

    .mn-note:not([hidden]) {
      display: block !important;
    }

    .mn-marker {
      cursor: pointer;
      text-decoration: underline;
      text-decoration-style: dotted;
    }
  }
</style>

{# Load Alegreya webfont #}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@0,400;0,600;1,400;1,600&display=swap" rel="stylesheet">

<div class="wb-shell">
  <div class="wb-frame">
    <div class="wb-grid">
      <article class="wb-prose" data-pagefind-body>
        <h1 data-pagefind-meta="title">{{ title }}</h1>

        <ul class="post-metadata" data-pagefind-ignore>
          <li><time datetime="{{ page.date | htmlDateString }}" data-pagefind-meta="date">{{ page.date | readableDate }}</time></li>
          {%- if tags %}
          {%- for tag in tags | filterTagList %}
          {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
          {%- endfor %}
          {%- endif %}
        </ul>

        {{ content | safe }}
      </article>
    </div>
  </div>
</div>

{# Margin note behavior (position + mobile toggles) #}
<script>
  (function () {
    function isMobile() {
      return window.innerWidth <= 950;
    }

    function wireToggles() {
      document.querySelectorAll('.mn-marker').forEach((marker) => {
        marker.addEventListener('click', (e) => {
          if (!isMobile()) return;

          e.preventDefault();
          const id = marker.getAttribute('data-mn-id');
          if (!id) return;
          const note = document.getElementById(id);
          if (!note) return;

          note.hidden = !note.hidden;
          marker.setAttribute('aria-expanded', String(!note.hidden));
        });
      });
    }

    function alignDesktopMarginNotes() {
      if (isMobile()) {
        // Mobile: ensure notes are in their natural position
        document.querySelectorAll('.mn-note').forEach(note => {
          note.style.position = '';
          note.style.top = '';
          note.hidden = true;  // Start hidden on mobile
        });
        return;
      }

      const grid = document.querySelector('.wb-grid');
      if (!grid) return;

      // FIRST: Move all notes to be direct children of the grid (not inside article)
      document.querySelectorAll('.mn-note').forEach(note => {
        if (note.parentElement !== grid) {
          grid.appendChild(note);
        }
      });

      // SECOND: Reset all notes to their natural grid position
      document.querySelectorAll('.mn-note').forEach(note => {
        note.style.position = 'relative';
        note.style.top = '0px';
        note.hidden = false;
      });

      // Force a reflow by reading a layout property
      grid.offsetHeight;

      // THIRD: Calculate offsets based on natural positions
      document.querySelectorAll('.mn-marker').forEach(marker => {
        const id = marker.getAttribute('data-mn-id');
        if (!id) return;

        const note = document.getElementById(id);
        if (!note) return;

        const markerRect = marker.getBoundingClientRect();
        const noteRect = note.getBoundingClientRect();

        // Calculate how much to shift the note vertically
        const verticalOffset = markerRect.top - noteRect.top;

        note.style.position = 'relative';
        note.style.top = verticalOffset + 'px';
      });
    }

    function scheduleAlign() {
      window.requestAnimationFrame(alignDesktopMarginNotes);
    }

    function onResize() {
      scheduleAlign();
    }

    wireToggles();

    window.addEventListener('load', scheduleAlign);
    window.addEventListener('resize', onResize);

    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(() => {
        setTimeout(scheduleAlign, 150);  // Allow time for font reflow
      });
    }
  })();
</script>
