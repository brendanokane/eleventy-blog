---
layout: layouts/base.njk
---

<article class="post">
	<header class="post-header{% if headerImage %} has-header-image{% endif %}">
		<div class="post-header-grid">
			{% if headerImage %}
				<div class="post-header-media">
					<img class="post-header-image" src="{{ headerImage }}" alt="{{ headerImageAlt or title }}" loading="eager" decoding="async">
				</div>
			{% endif %}

			<div class="post-header-text">
				<p class="post-kicker">{{ page.date | readableDate("LLLL d, yyyy", "utc") }}</p>
				<h1 class="post-title">{{ title }}</h1>

				{% if subtitle %}
					<p class="post-subtitle">{{ subtitle }}</p>
				{% endif %}
			</div>
		</div>
	</header>

	{{ content | safe }}
</article>
