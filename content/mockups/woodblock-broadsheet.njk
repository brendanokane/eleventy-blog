---
layout: layouts/home.njk
title: "Woodblock Broadsheet"
permalink: /mockups/woodblock-broadsheet/
robots: "noindex, nofollow"
eleventyExcludeFromCollections: true
---
{% set posts = collections.posts | reverse %}

<style>
  .mockup-shell {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem clamp(1.5rem, 4vw, 3.5rem) 4rem;
  }

  .broadsheet {
    display: grid;
    gap: 2.75rem;
    position: relative;
    padding: 0.75rem 0.75rem 1.5rem;
    background: color-mix(in srgb, var(--paper), #ffffff 10%);
  }

  .broadsheet::before {
    content: "";
    position: absolute;
    inset: -1.25rem;
    border: 1px solid color-mix(in srgb, var(--ink), transparent 72%);
    opacity: 0.7;
    filter: url(#woodblock-border);
    pointer-events: none;
  }

  .broadsheet::after {
    content: "";
    position: absolute;
    inset: -0.6rem;
    border: 1px solid color-mix(in srgb, var(--ink), transparent 82%);
    opacity: 0.45;
    transform: translate(1px, -1px);
    filter: url(#woodblock-border);
    pointer-events: none;
  }

  .broadsheet-masthead {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1.5rem;
    align-items: center;
    border-bottom: 2px solid var(--ink);
    padding-bottom: 1rem;
    position: relative;
  }

  .broadsheet-brand {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .logo-mark {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
  }

  .broadsheet-brand-kicker {
    font-family: var(--font-display);
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--ink-2);
    margin: 0 0 0.35rem;
  }

  .broadsheet-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3.2rem);
    margin: 0;
    letter-spacing: 0.02em;
  }

  .broadsheet-subtitle {
    margin: 0.4rem 0 0;
    max-width: 36rem;
    color: var(--ink-2);
  }

  .broadsheet-stamp {
    align-self: center;
    border: 2px solid var(--vermillion);
    color: var(--vermillion);
    padding: 0.35rem 0.7rem;
    font-family: var(--font-display);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.7rem;
  }

  .broadsheet-hero {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 0.8fr);
    gap: 2rem;
    align-items: stretch;
  }

  .broadsheet-hero-figure {
    position: relative;
    border: 1px solid color-mix(in srgb, var(--ink), transparent 70%);
    padding: 0.5rem;
    background: color-mix(in srgb, var(--paper), #ffffff 18%);
  }

  .broadsheet-hero-figure img {
    width: 100%;
    height: 100%;
    aspect-ratio: 16 / 10;
    object-fit: cover;
    display: block;
  }

  .broadsheet-hero-figure .image-fallback {
    aspect-ratio: 16 / 10;
    display: grid;
    place-items: center;
    border: 1px dashed color-mix(in srgb, var(--ink), transparent 70%);
    font-family: var(--font-display);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--ink-2);
  }

  .broadsheet-hero-copy {
    display: grid;
    gap: 0.8rem;
    align-content: start;
    padding: 1.2rem 1.4rem;
    border-left: 2px solid var(--ink);
    background: color-mix(in srgb, var(--paper-2), transparent 35%);
    position: relative;
  }

  .broadsheet-inkwash::after {
    content: "";
    position: absolute;
    inset: -0.4rem;
    background:
      radial-gradient(
        140px 90px at 18% 32%,
        color-mix(in srgb, var(--ink), transparent 78%),
        transparent 70%
      ),
      radial-gradient(
        220px 140px at 70% 28%,
        color-mix(in srgb, var(--ink), transparent 82%),
        transparent 72%
      ),
      linear-gradient(
        180deg,
        color-mix(in srgb, var(--ink), transparent 90%),
        transparent 65%
      );
    opacity: 0.22;
    mix-blend-mode: multiply;
    filter: blur(0.5px);
    pointer-events: none;
  }

  @media (prefers-color-scheme: dark) {
    .broadsheet-inkwash::after {
      opacity: 0.18;
      mix-blend-mode: screen;
    }
  }

  html[data-theme="light"] .broadsheet-inkwash::after {
    opacity: 0.22;
    mix-blend-mode: multiply;
  }

  .logo-mark {
    filter: var(--logo-filter);
  }

  html[data-theme="dark"] .broadsheet-inkwash::after {
    opacity: 0.18;
    mix-blend-mode: screen;
  }

  .broadsheet-kicker {
    font-family: var(--font-display);
    font-size: 0.7rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--vermillion);
  }

  .broadsheet-hero-copy h2 {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 2.8vw, 2.3rem);
    margin: 0;
  }

  .broadsheet-hero-copy p {
    margin: 0;
    color: var(--ink-2);
  }

  .broadsheet-meta {
    font-family: var(--font-display);
    font-size: 0.85rem;
    letter-spacing: 0.04em;
  }

  .broadsheet-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.6rem;
  }

  .broadsheet-card {
    display: grid;
    gap: 0.7rem;
    padding-top: 1rem;
    border-top: 1px solid color-mix(in srgb, var(--ink), transparent 80%);
  }

  .broadsheet-card-figure {
    border: 1px solid color-mix(in srgb, var(--ink), transparent 70%);
    padding: 0.35rem;
    background: color-mix(in srgb, var(--paper), #ffffff 12%);
  }

  .broadsheet-card-figure img {
    width: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    display: block;
  }

  .broadsheet-card-figure .image-fallback {
    aspect-ratio: 4 / 3;
    display: grid;
    place-items: center;
    border: 1px dashed color-mix(in srgb, var(--ink), transparent 70%);
    font-family: var(--font-display);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--ink-2);
  }

  .broadsheet-card h3 {
    font-family: var(--font-display);
    font-size: 1.15rem;
    margin: 0 0 0.4rem;
  }

  .broadsheet-card p {
    margin: 0;
    color: var(--ink-2);
    font-size: 0.95rem;
  }

  .broadsheet a {
    color: inherit;
    text-decoration: none;
  }

  .broadsheet a:hover h2,
  .broadsheet a:hover h3,
  .broadsheet a:hover h4 {
    text-decoration: underline;
    text-decoration-color: var(--vermillion);
    text-underline-offset: 0.2em;
  }

  .ink-rise {
    animation: ink-rise 0.8s ease both;
  }

  .ink-rise.delay-1 { animation-delay: 0.1s; }
  .ink-rise.delay-2 { animation-delay: 0.2s; }
  .ink-rise.delay-3 { animation-delay: 0.3s; }

  @keyframes ink-rise {
    from {
      opacity: 0;
      transform: translateY(18px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ink-rise {
      animation: none;
    }
  }

  @media (max-width: 980px) {
    .broadsheet-hero {
      grid-template-columns: 1fr;
    }

    .broadsheet-hero-copy {
      border-left: none;
      border-top: 2px solid var(--ink);
    }

    .broadsheet-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="mockup-shell">
  <div class="broadsheet">
    <header class="broadsheet-masthead broadsheet-inkwash ink-rise">
      <div class="broadsheet-brand">
        <img class="logo-mark" src="/img/burning-house-logo.svg" alt="Burning House logo">
        <div>
          <p class="broadsheet-brand-kicker">Broadsheet study</p>
          <h1 class="broadsheet-title">Stories from a Burning House</h1>
          <p class="broadsheet-subtitle">Experimental homepage layout using existing posts and the current palette.</p>
        </div>
      </div>
      <div class="broadsheet-stamp">Proof</div>
    </header>

    {% if posts.length %}
      {% set featured = posts[0] %}
      {% set featuredTeaser = featured.data.summary or featured.data.subtitle or featured.data.description %}
      <section class="broadsheet-hero ink-rise delay-1">
        <a href="{{ featured.url }}" class="broadsheet-hero-figure">
          {% if featured.data.post_image %}
            <img
              src="{{ featured.data.post_image }}"
              alt="{{ featured.data.post_image_alt or featured.data.title }}"
              loading="lazy"
            >
          {% else %}
            <div class="image-fallback">No image</div>
          {% endif %}
        </a>
        <div class="broadsheet-hero-copy broadsheet-inkwash">
          <div class="broadsheet-kicker">Most recent</div>
          <a href="{{ featured.url }}">
            <h2>{{ featured.data.title }}</h2>
          </a>
          {% if featuredTeaser %}
            <p>{{ featuredTeaser }}</p>
          {% endif %}
          <div class="broadsheet-meta">
            <time datetime="{{ featured.date | htmlDateString }}">{{ featured.date | readableDate }}</time>
          </div>
        </div>
      </section>
    {% endif %}

    <section class="broadsheet-grid ink-rise delay-2">
      {% for post in posts %}
        {% if loop.index0 > 0 and loop.index0 <= 9 %}
          {% set teaser = post.data.summary or post.data.subtitle or post.data.description %}
          <article class="broadsheet-card">
            <a href="{{ post.url }}" class="broadsheet-card-figure">
              {% if post.data.post_image %}
                <img
                  src="{{ post.data.post_image }}"
                  alt="{{ post.data.post_image_alt or post.data.title }}"
                  loading="lazy"
                >
              {% else %}
                <div class="image-fallback">No image</div>
              {% endif %}
            </a>
            <div>
              <a href="{{ post.url }}">
                <h3>{{ post.data.title }}</h3>
              </a>
              {% if teaser %}
                <p>{{ teaser }}</p>
              {% endif %}
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </section>
  </div>
</div>
