---
permalink: /feed/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>{{ metadata.title }}</title>
	<subtitle>{{ metadata.description }}</subtitle>
	<link href="{{ '/feed/feed.xml' | htmlBaseUrl(metadata.url) }}" rel="self"/>
	<link href="{{ metadata.url | addPathPrefixToFullUrl }}"/>
	<updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
	<id>{{ metadata.url }}</id>
	<author>
		<name>{{ metadata.author.name }}</name>
	</author>

	{%- for post in collections.posts | reverse %}
	{%- if post.url and post.url != false %}
	{% set absolutePostUrl %}{{ post.url | htmlBaseUrl(metadata.url) }}{% endset %}
	{% set transformed = post.templateContent | emailifyMarginNotes %}
	{% set feedContent = transformed.content %}
	{% set endnotes = transformed.endnotes %}
	<entry>
		<title>{{ post.data.title }}</title>
		<link href="{{ absolutePostUrl }}"/>
		<updated>{{ post.date | dateToRfc3339 }}</updated>
		<id>{{ absolutePostUrl }}</id>
		<content type="html"><![CDATA[
			{{ feedContent | safe }}
			{%- if endnotes and endnotes.length %}
			<hr style="margin-top: 2rem; border: 0; border-top: 1px solid #ccc;" />
			<h2 style="font-size: 1rem; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.75rem;">Notes</h2>
			<ol style="padding-left: 1.5rem;">
				{%- for note in endnotes %}
				<li id="fn-{{ loop.index }}" style="margin-bottom: 0.5rem;">{{ note | safe }}</li>
				{%- endfor %}
			</ol>
			{%- endif %}
			<hr style="margin-top: 2rem; border: 0; border-top: 1px solid #ccc;" />
			<p style="font-style: italic;"><a href="{{ absolutePostUrl }}">View this post on Burning House</a></p>
		]]></content>
	</entry>
	{%- endif %}
	{%- endfor %}
</feed>
