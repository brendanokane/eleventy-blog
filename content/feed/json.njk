---
# Metadata comes from _data/metadata.js
permalink: /feed/feed.json
---
{
	"version": "https://jsonfeed.org/version/1.1",
	"title": "{{ metadata.title }}",
	"language": "{{ metadata.language }}",
	"home_page_url": "{{ metadata.url | addPathPrefixToFullUrl }}",
	"feed_url": "{{ '/feed/feed.json' | htmlBaseUrl(metadata.url) }}",
	"description": "{{ metadata.description }}",
	"author": {
		"name": "{{ metadata.author.name }}",
		"url": "{{ metadata.author.url }}"
	},
	"items": [
		{%- set emitted = [] %}
		{%- for post in collections.posts | reverse %}
		{%- if post.url and post.url != false %}
		{%- set absolutePostUrl = post.url | htmlBaseUrl(metadata.url) %}
		{%- set _ = emitted.push(absolutePostUrl) %}
		{
			"id": "{{ absolutePostUrl }}",
			"url": "{{ absolutePostUrl }}",
			"title": "{{ post.data.title }}",
			"content_html": {% if post.templateContent %}{{ post.templateContent | transformWithHtmlBase(absolutePostUrl, post.url) | dump | safe }}{% else %}""{% endif %},
			"date_published": "{{ post.date | dateToRfc3339 }}"
		}
		{%- if not loop.last and emitted.length < (collections.posts | length) %},{% endif %}
		{%- endif %}
		{%- endfor %}
	]
}
